# Production Environment Configuration for URL Shortener

# Database Configuration
DATABASE_POSTGRES_URL=postgresql://user:secure_password@postgres:5432/url_shortener?sslmode=require
DATABASE_MAX_OPEN_CONNS=50
DATABASE_MAX_IDLE_CONNS=10
DATABASE_CONN_MAX_LIFETIME=10m
DATABASE_CONN_MAX_IDLE_TIME=5m

# PostgreSQL Environment Variables
POSTGRES_USER=user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=url_shortener

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_POOL_SIZE=20
REDIS_MIN_IDLE_CONN=10
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s

# Server Configuration
SERVER_PORT=8080
SERVER_GRACEFUL_TIMEOUT=30s
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_MAX_RECV_MSG_SIZE=4194304
SERVER_MAX_SEND_MSG_SIZE=4194304

# Application Configuration
APP_BASE_URL=https://yourdomain.com
APP_SHORT_CODE_LENGTH=7
APP_DEFAULT_TTL=8760h
APP_MAX_URL_LENGTH=2048
APP_RATE_LIMIT=1000
APP_RATE_WINDOW=1m
APP_CACHE_TTL=1h

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Security Configuration (for future auth implementation)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY=your-admin-api-key-change-this-in-production
